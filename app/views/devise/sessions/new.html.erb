<div class="container main-container">
  <div class="text-center">
    <h2 class="text-white">Log in</h2>
    <br>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "label-size text-white" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "label-size text-white" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "text-white" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "LOG IN", class: "btn button btn-success" %>
      </div>
    <% end %>

    <br>
    <%= render "devise/shared/links", class: "text-white" %>
    <%= link_to 'Back', root_path, class: "text-white" %>
  </div>
</div>